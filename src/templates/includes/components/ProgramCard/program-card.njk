{% macro item(heading, title, subTitle, image, btnText, btnIcon, item1, item2, item3, item4, item5, item6, item7, item8) %}
  <div class="program-card">
    <div class="program-card__head">
      <span>{{ heading }}</span>
      <figure><img src="{{ image }}"></figure>
    </div>
    <div class="program-card__body">
      <span>{{ title }}</span>
      <ul>
        <li>{{item1}}</li>
        <li>{{item2}}</li>
        <li>{{item3}}</li>
        <li>{{item4}}</li>
        <li>{{item5}}</li>
        <li>{{item6}}</li>
        <li>{{item7}}</li>
        <li>{{item8}}</li>
      </ul>
    </div>
    <button class="program-card__btn">
      <span>{{ btnText }}</span>
      <figure><img src="{{btnIcon}}"></figure>
    </button>
  </div>
{% endmacro %}

