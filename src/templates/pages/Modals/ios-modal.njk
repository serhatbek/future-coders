  }
] %}

{% block content %}
  {{Button.item(
    text='Open Modal',
    class='js-open-modal',
    buttonv3=true
  )}}

  <div class="modal-bg">
    <div class="modal">
      <div class="modal__header">
        <span>IOS/ Swift Developer</span>
        <figure class="js-close-modal">
          <img src="../assets/images/modal-close.png">
        </figure>
      </div>
      <div class="modal__body">
        <div class="modal__body-content">
          <span>IOS Ders Programı</span>
          <ul>
            {% for item in iosList %}
              <li>
                <span>{{item.part}}</span>{{item.topic}}</li>
            {% endfor %}
          </ul>

          <span>Swift Ders Programı</span>
          <ul>
            {% for item in swiftList %}
              <li>
                <span>{{item.part}}</span>{{item.topic}}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
{% endblock %}