{% extends 'includes/layout/layout.njk' %}
{% import 'includes/components/Button/button.njk' as Button %}

{% set title = 'IOS/ Swift Developer' %}
{% set page = 'modal' %}
{% set iosList = [
  {
    part: 'Bölüm 1.',
    topic: 'Swift Giriş'
  }, {
    part: 'Bölüm 2.',
    topic: 'Değişkenler ve Veri Tipleri'
  }, {
    part: 'Bölüm 3.',
    topic: 'Standart Programlama Yapılar'
  }, {
    part: 'Bölüm 4.',
    topic: 'OpXnal'
  }, {
    part: 'Bölüm 5.',
    topic: 'CollecXons'
  }, {
    part: 'Bölüm 6.',
    topic: 'Nesne Tabanlı Programlama'
  }
] %}

{% set swiftList = [
  {
    part: 'Bölüm 1.',
    topic: 'Swift Giriş'
  }, {
    part: 'Bölüm 2.',
    topic: 'Değişkenler ve Veri Tipleri'
  }, {
    part: 'Bölüm 3.',
    topic: 'Standart Programlama Yapılar'
  }, {
    part: 'Bölüm 4.',
    topic: 'OpXnal'
  }, {
    part: 'Bölüm 5.',
    topic: 'CollecXons'
  }, {
